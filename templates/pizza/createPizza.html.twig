{% extends "base.html.twig" %}

{% block title %}Hello Pizza ! - Nouvelle Pizza{% endblock %}

{% block header %}
  <h1>Ajouter une nouvelle pizza</h1>
{% endblock %}

{% block main_content %}


  <form method="POST">
  
    <div class="form-group">
      <label for="name">Nom</label>
      <input type="text" name="name" id="name" placeholder="ex : Margarita">
    </div>
    <div class="form-group">
      <label for="desc">Description</label>
      <textarea name="desc" id="desc" rows="10" placeholder="Description ..."></textarea>
      
    </div>
    <div class="form-group">
      <label for="price">Prix</label>
      <input type="number" step="0.01" name="price" placeholder="XX,XX €" id="price">
    </div>
    <div class="form-group">
      <label for="imageUrl">Lien de l'image</label>
      <input type="url" name="imageUrl" id="imageUrl">
    </div>
    <div class="button-container">
        <button class="btn btn-submit" type="submit">Créer</button>
    </div>
  
  </form>

{% endblock %}